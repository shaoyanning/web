<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- mybatis核心文件,用来封装优化数据库读取操作 -->
<mapper namespace="cn.dw.oa.dao.ProductDao">

	<!-- parameterType 传入的类型,mybatis有系统别名,并且支持自定义别名 -->
	<insert id="save" parameterType="product">
		insert into product
		(<include refid="param" />) values (<include refid="value" />)
	</insert>
	
	<!-- sql代码片段 -->
	<sql id="param">
	    <trim suffixOverrides=",">
		    <if test="name!=null">name,</if>
		    <if test="price!=null">price,</if>
		    <if test="remark!=null">remark,</if>
		    <if test="date!=null">date,</if>
	    </trim>
	</sql>
	
	<sql id="value">
		<trim suffixOverrides=",">
		    <if test="name!=null">#{name},</if>
		    <if test="price!=null">#{price},</if>
		    <if test="remark!=null">#{remark},</if>
		    <if test="date!=null">#{date},</if>
	    </trim>
	</sql>
	
	
	<update id="update" parameterType="product">
		update product
		<set>
			<if test="name!=null"> name = #{name}, </if>
			<if test="remark!=null"> remark = #{remark}, </if>
			<if test="price!=null"> price = #{price},</if>
			<if test="date!=null"> date = #{date},</if>
		</set>
		where id = #{id}
	</update>
	<delete id="delete" parameterType="int">
		delete from product where id = #{id}
	</delete>
	<select id="getById" parameterType="int" resultType="product">
		select * from product where id = #{id}
	</select>
	<!-- 如果是查询集合,resultType：定义的是查询集合里面存储的类型,而非定义集合类型 -->
	<select id="queryByName" resultType="product">
		select * from product where pro_name like #{keyword} limit #{start},#{size}
	</select>
	
	<!-- 
	<select id="queryByName" parameterType="map" resultType="product">
		select * from product
		<where>
			<if test="keyword!=null">
				and name like #{keyword}
			</if>
			<if test="minPrice!=null">
				and price &gt; #{minPrice}
			</if>
			<if test="maxPrice!=null">
				and price &lt; #{maxPrice}
			</if>
		</where>
	</select>
	-->
	
</mapper>

